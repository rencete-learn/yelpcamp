<% include partials/header %>

<div class="container">
    <h1><%= campground.name %></h1>
    <img src="<%= campground.image %>">
    <p><%= campground.description %></p>
    <a href="/campgrounds">Go back</a>

    <% campground.comments.forEach((comment) => { %>
        <p>
            <strong><%= comment.author %></strong> - <%= comment.text %>
        </p> 
    <% }) %>
</div>

