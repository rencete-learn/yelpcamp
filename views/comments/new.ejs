<% include ../partials/header %>

<div class="container">    
    <div class="row">
        <div class="col-12 text-center">
            <h1>Add New Comment to <%= campground.name %></h1>
        </div>
        
        <div class="col-md-4 col-6 mx-auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="formgroup">
                    <input class="btn btn-lg btn-primary w-100" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>