<% include ../partials/header %>

<div class="container">    
    <div class="row">
        <div class="col-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        
        <div class="col-md-4 col-6 mx-auto">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="campground name" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" id="">
                </div>
                <div class="formgroup">
                    <input class="btn btn-lg btn-primary w-100" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>