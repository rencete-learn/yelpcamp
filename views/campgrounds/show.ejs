<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group mb-3">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <li class="list-group-item">
                    <a href="/campgrounds">Go back</a>
                </li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>">
                <!-- <div class="card-title">
                </div> -->
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4 class="card-title card-link mb-2"><a href="#"><%= campground.name %></a></h4>
                    <h6 class="card-subtitle mb-3 text-muted">
                        <em>Submitted by <%= campground.author.username || "anonymous" %></em>
                    </h6>
                    <p class="card-text"><%- campground.description %></p>
                    <% if(user && campground.author.id.equals(user._id)) { %>
                        <a class="btn btn-outline-primary btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="form-delete" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                            <input class="btn btn-outline-danger btn-sm" type="submit" value="Delete">
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach((comment) => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                                <a class="btn btn-outline-primary btn-sm" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

</div>

<% include ../partials/footer %>